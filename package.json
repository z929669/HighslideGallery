{
	"type": "module",
	"scripts": {
		"lint": "npm run lint:eslint:fix && npm run lint:stylelint:fix",
		"lint:check": "npm run lint:eslint:check && npm run lint:stylelint:check",
		"lint:eslint:fix": "npx eslint modules/highslide.cfg.js --fix",
		"lint:eslint:check": "npx eslint modules/highslide.cfg.js --no-fix",
		"lint:stylelint:fix": "npx stylelint \"modules/**/*.css\" --fix",
		"lint:stylelint:check": "npx stylelint \"modules/**/*.css\" --no-fix",
		"format": "npx prettier --write \"*.json\" \".vscode/**/*.json\" \"*.md\""
	},
	"devDependencies": {
		"@eslint/js": "^9.0.0",
		"eslint": "^9.17.0",
		"stylelint": "^16.12.0",
		"stylelint-config-standard": "^37.0.0",
		"prettier": "^3.4.2"
	},
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=11.0.0"
	}
}
